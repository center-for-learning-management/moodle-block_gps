<div>
    {{^is_https}}
        <p class="alert alert-warning">
        {{#str}} http_no_geolocation, block_gps {{/str}}
        </p>
    {{/is_https}}
    {{#is_https}}
        <a href="#" onclick="require(['block_gps/geoassist'], function(helper) { helper.locate(true); });" class="btn btn-primary ban-default">
