            {{#str }} update_location, block_gps {{/str }}
        </a>
    {{/is_https}}
    <a href="{{wwwroot}}/blocks/gps/{{goto}}.php?id={{courseid}}" class="btn btn-secondary">
        <i class="fa {{gotomarker}}"></i>
        {{gotostr}}
    </a>
