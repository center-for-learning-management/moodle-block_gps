<table border="1" width="100%" class="table table-hover">
  <thead class="thead-light">
      <tr>
          <th scope="col">{{#str}}item, block_gps {{/str}}</th>
          <th scope="col">{{#str}}latitude, block_gps {{/str}}<br />{{#str}}longitude, block_gps {{/str}}</th>
          <th scope="col">{{#str}}accuracy, block_gps {{/str}}</th>
          <th scope="col">{{#str}}persistent, block_gps {{/str}}</th>
          <th scope="col">{{#str}}distance, block_gps {{/str}}</th>
      </tr>
  </thead>
  <tbody>
      {{#items}}
      <tr data-available="{{available}}" style="{{^available}} color: darkgray !important; {{/available}}">
          <td>
              <a href="{{url}}" style="{{^available}} color: darkgray !important; {{/available}}">
                  <img src="{{icon}}" alt="{{alt}}" style="max-height: 1em;" />
                  {{name}}
              </a>
          </td>
          <td align="center">
              {{latitude}} {{#longitude}}<br />{{/longitude}} {{longitude}}
          </td>
          <td align="center">
              {{accuracy}}
          </td>
          <td align="center">
              {{persistent}}
          </td>
          <td align="center">
              {{distlbl}}
          </td>
      </tr>
      {{/items}}
  </tbody>
</table>
