{{!
    @template core/modal
    Moodle modal template.
    The purpose of this template is to render a modal
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the boday
    * footer HTML content for the footer
    Example context (json):
    {
        "title": "Example modal",
        "body": "Some example content for the body",
        "footer": "Footer text, right here!"
    }
}}

{{< core/modal }}
    {{$title}}{{#str}} congratulations, block_gps {{/str}}{{/title}}
    {{$body}}
        <p>
            <i class="fa fa-thumbs-up" style="font-size: 60px; float: right; margin-left: 15px;"></i>
            {{#str}} congratulations:reached_location, block_gps {{/str}}
        </p>
    {{/body}}
    {{$footer}}
        <a href="#" class="btn btn-primary" data-action="goto">
            {{#str}} goto_location, block_gps {{/str}}
        </a>
    {{/footer}}
{{/ core/modal }}
