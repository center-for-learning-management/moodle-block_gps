{{^is_https}}
    <div class="alert alert-danger">{{#str}} http_no_geolocation, block_gps {{/str}}</div>
{{/is_https}}
{{#is_https}}
    <div class="row">
        <div class="col-md-12">
            <strong>{{#str}} update_location, block_gps{{/str}}</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a href="#" onclick="require(['block_gps/geoassist'], function(helper) { helper.locate(true); }); return false;" class="btn" style="width: 100%;">
                <i class="fa fa-map-marker" style="font-size: 35px;"></i><br />
                {{#str}} update_location_once, block_gps{{/str}}
            </a>
        </div>
        <div class="col-md-6">
            <a href="#" id="block_gps_interval_toggler" onclick="require(['block_gps/geoassist'], function(G) { G.intervalToggle(); }); return false;" class="btn" style="width: 100%;">
                {{^setinterval}}
                    <i class="fa fa-toggle-off" style="font-size: 35px;"></i><br />
                {{/setinterval}}
                {{#setinterval}}
                    <i class="fa fa-toggle-on" style="font-size: 35px;"></i><br />
                {{/setinterval}}
                {{#str}} update_location_regularly, block_gps {{/str}}
            </a>
        </div>
    </div>
{{/is_https}}

